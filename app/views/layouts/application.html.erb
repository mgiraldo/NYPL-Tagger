<!DOCTYPE html>
<html>
<head>
  <title>Tagger</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% if flash[:notice] %>
	<div class="notice"><%= flash[:notice] %></div>
	<% end %>

	<div id="main">
		<div id="toolbar">

			<%= link_to_unless_current "Your Favorites", @current_user %> •
			<%= link_to_unless_current "Latest activity", patrons_path %> •
			<%= link_to_unless_current "Groups and Collections", @current_user %> •
			<%= link_to_unless_current "Recommended for You", @current_user %>

			<div class="left_stuff">
				Hello, <%= @current_user.first_name %>! • 
				<%= link_to_unless_current "My Account", edit_patron_path(@current_user), :target => "_top" %> •
				<%= link_to "Sign out", "#" %>
			</div>
		</div>
		
		<%= yield  %>
	</div>

</body>
</html>
